<section>
    <form action="/admin/editCategory/<%= updatingData._id %>" method="post" enctype="multipart/form-data" style="max-width: 50%; margin:5% 0  0 30% ;">
        <div class="modal-header">						
            <h2 class="text-center">Edit Category</h2>
            
        </div>
        <div class="modal-body">					
            <div class="form-group">
                <label>Name</label>
                <input type="text" class="form-control" name="name" required value="<%= updatingData.name %>" pattern="[A-Za-z][A-Za-z0-9]*" maxlength="40">
            </div>
            <div class="form-group">
                <label>Description</label>
                <textarea class="form-control" name="description" required rows="4" cols="50" pattern="[A-Za-z][A-Za-z0-9]*" maxlength="200"><%= updatingData.description %></textarea>
            </div>
           <div class="form-group" >
                <label>Images</label>
                <div  style="display: flex; ">
                    <% for(let i=0; i<updatingData.images.length; i++){ %>
                        <div style="display: flex; flex-direction: column; border: 1px solid rgb(160, 148, 148); margin: 15px; "><img style="width: 100px; height: 100px; padding: 5px;" class="img-fluid w-100" src="<%= updatingData.images[i] %>" alt=""> 
                        <button type="button" class="close" aria-label="Close">
                           
                            <span aria-hidden="true"><a href="/admin/deleteImgCategory/<%= updatingData._id %>/<%= updatingData.images[i].replace('/uploads/', '') %>" style="text-decoration: none; color:black; font-size: 35px;">&times;</a></span> 
                          </button>
                        </div>
                        <% } %>
                </div>
                <div><i class="icon-remove"></i>
                </div>
                <input type="file" id="images" name="images" accept="image/*" multiple class="form-control">
            </div>	
            <div class="form-group">
                <label>Validity Status</label>
                <select class="form-control" name="isValid" required>
                    <option value="true" <% if (updatingData.isValid === true) { %>selected<% } %>>True</option>
                    <option value="false" <% if (updatingData.isValid === false) { %>selected<% } %>>False</option>
                </select>
                
            </div>		
        </div>
        <div class="modal-footer">
            <button><a href="/admin/categories/" style="text-decoration: none; padding: 10px;">Cancel</a></button>
            <button type="submit" class="btn btn-info"  > save</button>
        </div>
    </form>
    </section>

    