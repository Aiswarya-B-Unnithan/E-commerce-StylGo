<section>
    <form action="/admin/editOffer/<%= updatingData._id %>" method="post" style="max-width: 50%; margin:5% 0  0 30% ;">
        <div class="modal-header">						
            <h2 class="text-center">Edit Coupon</h2>
            
        </div>
        <div class="modal-body">					
            <div class="form-group">
                <label>Offer Name</label>
                <input
                type="text"
                class="form-control"
                name="offerName"
                required
                value="<%= updatingData.offerName %>"
              />            
            </div>
            <div class="form-group">
                <label>Discount Percentage</label>
                <input
                type="text"
                class="form-control"
                name="discountPercentage"
                required
                value="<%= updatingData.discountPercentage %>"
              />            
            </div>
        <div class="form-group">
          <label>Offer For</label>
          <input
          type="text"
          class="form-control"
          name="offerFor"
          required
          value="<%= updatingData.offerFor %>"
        />            
      </div>
      <div class="form-group">
        <label>Name</label>
        <input
        type="text"
        class="form-control"
        name="offerForName"
        required
        value="<%= updatingData.offerForName %>"
      />            
    </div>
            <div class="form-group">
                <label>Validity Status</label>
                <select class="form-control" name="isValid" required>
                    <option value="true" <% if (updatingData.isValid === true) { %>selected<% } %>>True</option>
                    <option value="false" <% if (updatingData.isValid === false) { %>selected<% } %>>False</option>
                </select>
                
            </div>	
        </div>
        <div class="modal-footer">
            <button><a href="/admin/offer" style="text-decoration: none; padding: 10px;">Cancel</a></button>
            <button type="submit" class="btn btn-info"  > save</button>
        </div>
    </form>
    </section>

    