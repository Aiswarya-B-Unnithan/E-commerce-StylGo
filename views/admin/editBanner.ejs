<section>
    <form action="/admin/editBanner/<%= updatingData._id %>" method="post" enctype="multipart/form-data" style="max-width: 50%; margin:5% 0  0 30% ;">
        <div class="modal-header">						
            <h2 class="text-center">Edit Banner</h2>
            
        </div>
        <div class="modal-body">
            <div class="form-group" >
                <label>Image</label>
                <div  style="display: flex; ">
                        <div style="display: flex; flex-direction: column; border: 1px solid rgb(160, 148, 148); margin: 15px; "><img style="width: 100px; height: 100px; padding: 5px;" class="img-fluid w-100" src="<%= updatingData.image %>" alt=""> 
                       
                        </div>
                    
                </div>
                <input type="file" id="image" name="image" accept="image/*" multiple class="form-control">
            </div>						
            <div class="form-group">
                <label>Primary Text</label>
                <input type="text" class="form-control" name="primaryText" required value="<%= updatingData.primaryText %>"  maxlength="40">
            </div>
            <div class="form-group">
                <label>Secondary Text</label>
                <input type="text" class="form-control" name="secondaryText" required value="<%= updatingData.secondaryText %>"  maxlength="40">
            </div>
        </div>
        <div class="modal-footer">
            <button><a href="/admin/banner" style="text-decoration: none; padding: 10px;">Cancel</a></button>
            <button type="submit" class="btn btn-info"  > save</button>
        </div>
    </form>
    </section>

    