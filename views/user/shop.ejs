<!-- Shop Start -->
<div class="container-fluid pt-5">
    <div class="row px-xl-5">
        <!-- Shop Sidebar Start -->

        <div class="col-lg-2 col-md-12">
            <form action="/shop/filter" method="post">
                <div class="d-flex align-items-center justify-content-between mb-3">
                    <h5 class="font-weight-semi-bold mb-4">Total Products</h5>
                    <span class="badge border font-weight-semi-bold mb-4">
                        <%= totalProducts %>
                    </span>

                </div>
                <!-- Price Start -->
                <div class="border-bottom mb-4 pb-4">

                    <h5 class="font-weight-semi-bold mb-4">Filter by price</h5>

                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                        <input type="radio" class="custom-control-input" checked id="price-all" name="price"
                            value="undefined">
                        <label class="custom-control-label" for="price-all">All Price</label>

                    </div>
                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                        <input type="radio" name="price" class="custom-control-input" id="price-1" value="0-1000">
                        <label class="custom-control-label" for="price-1">₹0 - ₹1000</label>

                    </div>
                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                        <input type="radio" name="price" class="custom-control-input" id="price-2" value="1000-2000">
                        <label class="custom-control-label" for="price-2">₹1000 - ₹2000</label>

                    </div>
                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                        <input type="radio" name="price" class="custom-control-input" id="price-3" value="2000-3000">
                        <label class="custom-control-label" for="price-3">₹2000 - ₹3000</label>

                    </div>
                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                        <input type="radio" name="price" class="custom-control-input" id="price-4" value="3000-4000">
                        <label class="custom-control-label" for="price-4">₹3000 - ₹4000</label>

                    </div>
                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between">
                        <input type="radio" name="price" class="custom-control-input" id="price-5" value="4000-5000">
                        <label class="custom-control-label" for="price-5">₹4000 - ₹5000</label>

                    </div>

                </div>
                <!-- Price End -->

                <!-- Color Start -->
                <div class="border-bottom mb-4 pb-4">
                    <h5 class="font-weight-semi-bold mb-4">Filter by color</h5>

                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                        <input type="radio" name="color" class="custom-control-input" checked id="color-all"
                            value="undefined">
                        <label class="custom-control-label" for="price-all">All Color</label>

                    </div>
                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                        <input type="radio" name="color" class="custom-control-input" id="color-1" value="black">
                        <label class="custom-control-label" for="color-1">Black</label>

                    </div>
                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                        <input type="radio" name="color" class="custom-control-input" id="color-2"  value="white">
                        <label class="custom-control-label" for="color-2">White</label>

                    </div>
                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                        <input type="radio" name="color" class="custom-control-input" id="color-3"  value="red">
                        <label class="custom-control-label" for="color-3">Red</label>

                    </div>
                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                        <input type="radio" name="color" class="custom-control-input" id="color-4"  value="blue">
                        <label class="custom-control-label" for="color-4">Blue</label>

                    </div>
                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between">
                        <input type="radio" name="color" class="custom-control-input" id="color-5"  value="green">
                        <label class="custom-control-label" for="color-5">Green</label>

                    </div>

                </div>
                <!-- Color End -->

                <!-- Size Start -->
                <div class="mb-5">
                    <h5 class="font-weight-semi-bold mb-4">Filter by size</h5>

                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                        <input type="radio" name="size" class="custom-control-input" checked id="size-all"
                            value="undefined">
                        <label class="custom-control-label" for="size-all">All Size</label>

                    </div>

                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                        <input type="radio" name="size" class="custom-control-input" id="size-2" value="S">
                        <label class="custom-control-label" for="size-2">S</label>
                    </div>
                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                        <input type="radio" name="size" class="custom-control-input" id="size-3" value="M">
                        <label class="custom-control-label" for="size-3">M</label>
                    </div>
                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                        <input type="radio" name="size" class="custom-control-input" id="size-4" value="L">
                        <label class="custom-control-label" for="size-4">L</label>
                    </div>
                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                        <input type="radio" name="size" class="custom-control-input" id="size-5" value="XL">
                        <label class="custom-control-label" for="size-5">XL</label>
                    </div>
                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between">
                        <input type="radio" name="size" class="custom-control-input" id="size-6" value="XXL">
                        <label class="custom-control-label" for="size-6">XXL</label>
                    </div>


                </div>
                <!-- Size End -->
                <button class="btn btn-primary">Apply Filter</button>
            </form>
        </div>

        <!-- Shop Sidebar End -->


        <!-- Shop Product Start -->
        <div class="col-lg-10 col-md-12">
            <div class="row pb-3">
                <div class="col-12 pb-1">
                    <div style="display: flex; justify-content: space-between;">
                        <div class="col-lg-6 col-6 text-left">
                            <form action="/searchProduct" method="get">
                                <div class="input-group">
                                    <input type="text" class="form-control" placeholder="Search for products"
                                        class="searchFormInput" type="text" name="searchQuery">
                                    <div class="input-group-append">
                                        <button type="submit">
                                            <span class="input-group-text bg-transparent text-primary">
                                                <i class="fa fa-search"></i>
                                            </span>
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <!-- <div class="dropdown ml-4">
                        <button class="btn border dropdown-toggle" type="button" id="triggerId" data-toggle="dropdown" aria-haspopup="true"
                                aria-expanded="false">
                                    Sort by
                                </button>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="triggerId">
